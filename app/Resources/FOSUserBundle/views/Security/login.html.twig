{% extends "FOSUserBundle::layout.html.twig" %}

{% block fos_user_content %}
    <div class="middle-box text-center loginscreen animated fadeInDown">
        <div>
            <div>
                <h1 class="logo-name">{{ 'security.login.logo_name'|trans }}</h1>
            </div>
            <h3>{{ 'security.login.greeting'|trans }}</h3>
            <p>{{ 'security.login.note'|trans }}</p>
            <form class="m-t" role="form" action="{{ path("fos_user_security_check") }}" method="post">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}">
                <div class="form-group">
                    <input type="text" name="_username" class="form-control" placeholder="{{ 'security.login.username'|trans }}">
                </div>
                <div class="form-group">
                    <input type="password" name="_password" class="form-control" placeholder="{{ 'security.login.password'|trans }}">
                </div>
                <button type="submit" class="btn btn-primary block full-width m-b">{{ 'security.login.submit'|trans }}</button>

                <a href="{{ path('fos_user_resetting_request') }}"><small>{{ 'security.login.forgot_password'|trans }}</small></a>
                <p class="text-muted text-center"><small>{{ 'security.login.not_have_an_account'|trans }}</small></p>
                <a class="btn btn-sm btn-white btn-block" href="{{ path("fos_user_registration_register") }}">{{ 'security.login.registration'|trans }}</a>
            </form>
        </div>
    </div>
