{% extends "FOSUserBundle::layout.html.twig" %}

{% block fos_user_content %}
    <div class="middle-box text-center animated fadeInDown registration-form">
        <div>
            <div class="icon-logo logo"></div>
            <h3>{{ 'security.register.header'|trans }}</h3>
            <p>{{ 'security.register.subheader'|trans }}</p>
            {{ form_start(form, {'action': path('fos_user_registration_register'), 'attr': {'novalidate': true, 'class': 'registration-form'}}) }}
            <div class="form-group">
                {{ form_widget(form.username, {'attr': {'class': 'form-control', 'placeholder': 'Логин'}}) }}
                {{ form_errors(form.username) }}
            </div>
            <div class="form-group">
                {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
                {{ form_errors(form.email) }}
            </div>
            <div class="form-group">
                {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control', 'placeholder': 'Пароль'}}) }}
                {{ form_errors(form.plainPassword.first) }}
            </div>
            <div class="form-group">
                {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control', 'placeholder': 'Повтор пароля'}}) }}
                {{ form_errors(form.plainPassword.second) }}
            </div>
            {% if form.referrer is defined %}
            <div class="form-group">
                {{ form_widget(form.referrer, {'attr': {'class': 'form-control', 'placeholder': 'Ник пригласившего'}}) }}
                {{ form_errors(form.referrer) }}
            </div>
            {% endif %}
            <button type="submit" class="btn btn-primary block full-width m-b">{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock fos_user_content %}
