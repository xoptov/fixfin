{% extends "AppBundle::layout.html.twig" %}

{% block content %}
    <div class="window">
        <div class="header">
            <h3>Новости</h3>
        </div>
        <div class="content">
        {% if news is not empty %}
            {% for item in news %}
            <div class="news-item">
                <div class="col-xs-2 news-date">{{ item.createdAt|date('d.m.Y') }}</div>
                <div class="col-xs-10 news-text">{{ item.content }}</div>
            </div>
            {% endfor %}
        {% else %}
            Инвените но на данный момент новостей нет!
        {% endif %}
    </div>
{% endblock %}